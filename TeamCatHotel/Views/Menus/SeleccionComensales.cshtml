@model TeamCatHotel.Models.ReservaMenuViewModel

@{
    ViewData["Title"] = "SeleccionComensales";
}

<h2>SeleccionComensales</h2>

<form asp-controller="Menus" asp-action="SeleccionComensales" method="post">
    <div class="form-horizontal">
        <h4>Menu</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="col-md-2 control-label">Cliente: @Model.nCliente</label>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Num. Comensales</label>
            <div class="col-md-10">
                <input type="number" min="1" name="nComensales" />
            </div>
        </div>
        @using (Html.BeginForm()) {
            @Html.HiddenFor(m => m.nHabitacion)
            @Html.HiddenFor(m => m.idServicio)
            @Html.HiddenFor(m => m.nCliente)
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
    <a asp-action="ContratarMenu">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
