@model TeamCatHotel.Models.ReservaHabitacion

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>ReservaHabitacion</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Reserva" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownList("idR", ViewBag.Reservas as SelectList)
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Habitacion" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownList("nh", ViewBag.Habitaciones as SelectList)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
